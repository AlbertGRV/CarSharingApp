@model Booking
@{
    ViewData["Title"] = "Детали бронирования";
    var isActive = Model.EndDate >= DateTime.Now && Model.Status != "Отменено";
    var isCompleted = Model.EndDate < DateTime.Now && Model.Status != "Отменено";
    var isCancelled = Model.Status == "Отменено";
}

<div class="container py-4">
    <div class="row">
        <div class="col-md-12 mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Личный кабинет</a></li>
                    <li class="breadcrumb-item"><a asp-action="Bookings">Мои бронирования</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Детали бронирования</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Детали бронирования #@Model.Id</h5>
                    @if (isActive)
                    {
                        <span class="badge bg-success">Активно</span>
                    }
                    else if (isCompleted)
                    {
                        <span class="badge bg-secondary">Завершено</span>
                    }
                    else if (isCancelled)
                    {
                        <span class="badge bg-danger">Отменено</span>
                    }
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6>Информация о бронировании</h6>
                            <table class="table table-borderless">
                                <tr>
                                    <th>Номер бронирования:</th>
                                    <td>#@Model.Id</td>
                                </tr>
                                <tr>
                                    <th>Дата создания:</th>
                                    <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <th>Статус:</th>
                                    <td>
                                        @if (isActive)
                                        {
                                            <span class="badge bg-success">Активно</span>
                                        }
                                        else if (isCompleted)
                                        {
                                            <span class="badge bg-secondary">Завершено</span>
                                        }
                                        else if (isCancelled)
                                        {
                                            <span class="badge bg-danger">Отменено</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h6>Период аренды</h6>
                            <table class="table table-borderless">
                                <tr>
                                    <th>Начало:</th>
                                    <td>@Model.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <th>Окончание:</th>
                                    <td>@Model.EndDate.ToString("dd.MM.yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <th>Продолжительность:</th>
                                    <td>@((Model.EndDate - Model.StartDate).TotalHours.ToString("F1")) часов</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h6>Информация об автомобиле</h6>
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <img src="https://via.placeholder.com/200x150?text=@Model.Car.Brand+@Model.Car.Model" class="img-fluid rounded" alt="@Model.Car.Brand @Model.Car.Model">
                                        </div>
                                        <div class="col-md-8">
                                            <h5>@Model.Car.Brand @Model.Car.Model</h5>
                                            <p class="text-muted">@Model.Car.Year год, @Model.Car.Color</p>
                                            <p>Гос. номер: <strong>@Model.Car.LicensePlate</strong></p>
                                            <p>Тип топлива: @Model.Car.FuelType</p>
                                            <p>Трансмиссия: @Model.Car.Transmission</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <h6>Стоимость</h6>
                            <table class="table">
                                <tr>
                                    <td>Базовая стоимость аренды</td>
                                    <td class="text-end">@(Model.Car.HourlyRate * (Model.EndDate - Model.StartDate).TotalHours) ₽</td>
                                </tr>
                                <tr>
                                    <td>Страховка</td>
                                    <td class="text-end">@(Model.InsuranceCost) ₽</td>
                                </tr>
                                <tr>
                                    <td>Сервисный сбор</td>
                                    <td class="text-end">@(Model.ServiceFee) ₽</td>
                                </tr>
                                <tr class="table-active">
                                    <th>Итого</th>
                                    <th class="text-end">@Model.TotalCost ₽</th>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            @if (isActive && Model.StartDate > DateTime.Now)
            {
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">Отмена бронирования</h5>
                    </div>
                    <div class="card-body">
                        <p>Вы можете отменить бронирование до начала аренды.</p>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelBookingModal">
                            Отменить бронирование
                        </button>

                        <!-- Модальное окно для отмены бронирования -->
                        <div class="modal fade" id="cancelBookingModal" tabindex="-1" aria-labelledby="cancelBookingModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="cancelBookingModalLabel">Подтверждение отмены</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Вы уверены, что хотите отменить бронирование?</p>
                                        <p><strong>Автомобиль:</strong> @Model.Car.Brand @Model.Car.Model</p>
                                        <p><strong>Период:</strong> @Model.StartDate.ToString("dd.MM.yyyy HH:mm") - @Model.EndDate.ToString("dd.MM.yyyy HH:mm")</p>
                                        <p><strong>Стоимость:</strong> @Model.TotalCost ₽</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                                        <form asp-action="CancelBooking" asp-route-id="@Model.Id" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger">Подтвердить отмену</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Действия</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Bookings" class="btn btn-outline-primary">Все бронирования</a>
                        <a asp-controller="Cars" asp-action="Index" class="btn btn-primary">Забронировать еще</a>
                        @if (isActive && Model.StartDate <= DateTime.Now)
                        {
                            <a href="#" class="btn btn-success">Начать поездку</a>
                        }
                    </div>
                </div>
            </div>

            @if (isActive)
            {
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Информация о поездке</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.StartDate > DateTime.Now)
                        {
                            <div class="alert alert-info">
                                <p><strong>До начала поездки:</strong></p>
                                <h4 id="countdown">Загрузка...</h4>
                            </div>
                            <p>Место получения автомобиля:</p>
                            <p><strong>@Model.Car.Location</strong></p>
                        }
                        else
                        {
                            <div class="alert alert-success">
                                <p><strong>Поездка активна</strong></p>
                                <p>Окончание через: <span id="countdown">Загрузка...</span></p>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Поддержка</h5>
                </div>
                <div class="card-body">
                    <p>Если у вас возникли вопросы по бронированию, свяжитесь с нами:</p>
                    <p><strong>Телефон:</strong> 8-800-123-45-67</p>
                    <p><strong>Email:</strong> support@carshare.ru</p>
                    <button class="btn btn-outline-secondary w-100">Чат с поддержкой</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Функция для обновления таймера обратного отсчета
        function updateCountdown() {
            @if (isActive)
            {
                <text>
                const targetDate = new Date('@(Model.StartDate > DateTime.Now ? Model.StartDate : Model.EndDate)');
                const now = new Date();
                const diff = targetDate - now;
                
                if (diff <= 0) {
                    location.reload(); // Перезагрузить страницу, когда время истекло
                    return;
                }
                
                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);
                
                let countdownText = '';
                if (days > 0) countdownText += days + ' д. ';
                countdownText += hours + ' ч. ' + minutes + ' мин. ' + seconds + ' сек.';
                
                document.getElementById('countdown').textContent = countdownText;
                </text>
            }
        }
        
        // Обновлять каждую секунду
        updateCountdown();
        setInterval(updateCountdown, 1000);
    </script>
}